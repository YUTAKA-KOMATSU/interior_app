<%= form_with model: myinterior, local: true do |f|%>
  <div class="form-group">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form__text %>
  </div>

  <div class="form-group">
    <%= f.label :concept, "インテリアタイプ" %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %> 
  </div>

  <div class="form-group">
    <%= f.label :image, "インテリアの画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <div class="form-btn">
      <%= f.submit "投稿する", class:"form-color-btn"  %>
    </div>
  </div>
<% end %>